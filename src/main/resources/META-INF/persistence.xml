<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="2.0">

	<persistence-unit name="myPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>

			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://SUA_URL:SUA_PORTA/SEU_BD" />
			<property name="javax.persistence.jdbc.user" value="USUARIO_DE_ACESSO_AO_BD" />
			<property name="javax.persistence.jdbc.password" value="USUARIO_DE_ACESSO_AO_BD" />

			<!--Hibernate properties -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

		</properties>
	</persistence-unit>
</persistence>
